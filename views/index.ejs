<%- include("top.ejs") %>
  <p>Welcome to <%= title %>
      <p>
        <%= qtd %> usuários cadastrados!
      </p>
      <table>
        <tr style="background-color:gray">
          <td>Nome</td>
          <td>Ações</td>
          <td></td>
        </tr>
        <% if(docs){ for(var i=0; i< docs.length; i++){ %>
          <tr>
            <td>
              <a href="/edit/<%= docs[i]._id %>">
                <%= docs[i].username %>
              </a>
            </td>
            <td>
              <form action="/delete/<%= docs[i]._id %>" method="POST">
                <input type="submit" value="Excluir">
              </form>
            </td>
          </tr>
          <% } } %>
            <tr>
              <td colspan="2">
                <% for(var i=1; i<=qtdPaginas; i++){ if(pagina===i) { %>
                  <%= i %> | <% } else { %>
                      <a href="/index/<%= i %>">
                        <%= i %>
                      </a> |
                      <% } } %>
              </td>
            </tr>
      </table>
  </p>
  <p>
    <a href="/users/signup">Cadastrar</a>
  <form action="/logoff" method="POST">
    <input type="submit" value="Logoff">
  </form>
  </p>
  <p>
    <% if(profile==='2' ) { %>
      <a href="/reports">Ver relatórios</a>
      <% }%>
  </p>
